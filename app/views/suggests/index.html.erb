<p id="notice"><%= notice %></p>

<h1>Suggests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suggests.each do |suggest| %>
      <tr>
        <td><%= suggest.name %></td>
        <td><%= suggest.description %></td>
        <td><%= suggest.price %></td>
        <td><%= suggest.image %></td>
        <td><%= suggest.status %></td>
        <td><%= link_to 'Show', suggest %></td>
        <td><%= link_to 'Edit', edit_suggest_path(suggest) %></td>
        <td><%= link_to 'Destroy', suggest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Suggest', new_suggest_path %>
